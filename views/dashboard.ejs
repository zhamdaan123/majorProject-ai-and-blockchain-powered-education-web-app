<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Your Dashboard - <%= user.username %></title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    :root {
      --primary-color: #771965;
      --secondary-color: #c13399;
      --accent-color: #f292c2;
      --highlight-color: #f57ca9;
      --background-color: #f9f1f6;
      --text-color: #2c2c2c;
    }

    body {
      background-color: var(--background-color);
      color: var(--text-color);
      padding-top: 70px;
    }

    .navbar {
      background-color: var(--primary-color);
    }

    .navbar-brand, .nav-link {
      color: white !important;
    }

    .nav-link:hover {
      color: var(--highlight-color) !important;
    }

    .card {
      border: none;
      border-radius: 1rem;
      transition: transform 0.2s;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card-title {
      color: var(--primary-color);
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
      <a class="navbar-brand" href="#">EduTech</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/coursePage">Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="api/auth/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Welcome Section -->
  <div class="container mt-4">
    <h2 class="mb-4">Welcome back, <%= user.username %> ðŸ‘‹</h2>
    
    <!-- Courses -->
    <div class="row">
      <% if (courses && courses.length > 0) { %>
        <% courses.forEach(course => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= course.title %></h5>
                <p class="card-text"><%= course.description.slice(0, 100) %>...</p>
                <a href="/courses/<%= course._id %>" class="btn btn-primary">Go to Course</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info">
            You are not enrolled in any courses yet. <a href="/coursePage">Browse courses</a>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
